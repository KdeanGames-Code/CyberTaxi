{
    "version": 8,
    "name": "Dark Mode Style",
    "metadata": {
        "mapbox:autocomposite": true
    },
    "sources": {
        "openmaptiles": {
            "type": "vector",
            "url": "mbtiles://austin"
        }
    },
    "glyphs": "http://localhost:3000/api/fonts/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#111111"
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "water",
            "paint": {
                "fill-color": "#333333"
            }
        },
        {
            "id": "landuse-urban",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landuse",
            "filter": ["==", "class", "residential"],
            "paint": {
                "fill-color": "#222222"
            }
        },
        {
            "id": "road-primary",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": ["==", "class", "primary"],
            "paint": {
                "line-color": "#444444",
                "line-width": 3
            }
        },
        {
            "id": "road-secondary",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": ["==", "class", "secondary"],
            "paint": {
                "line-color": "#444444",
                "line-width": 2
            }
        },
        {
            "id": "road-tertiary",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": ["==", "class", "tertiary"],
            "paint": {
                "line-color": "#444444",
                "line-width": 1
            }
        },
        {
            "id": "road-minor",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": ["in", "class", "minor", "service"],
            "paint": {
                "line-color": "#444444",
                "line-width": 0.8
            }
        },
        {
            "id": "road-labels",
            "type": "symbol",
            "source": "openmaptiles",
            "source-layer": "transportation_name",
            "minzoom": 12,
            "maxzoom": 18,
            "layout": {
                "text-field": "{name}",
                "text-font": ["Open Sans Regular"],
                "text-size": 10,
                "visibility": "visible"
            },
            "paint": {
                "text-color": "#00a3e0",
                "text-halo-color": "#111111",
                "text-halo-width": 1
            }
        },
        {
            "id": "poi-labels",
            "type": "symbol",
            "source": "openmaptiles",
            "source-layer": "poi",
            "minzoom": 14,
            "maxzoom": 18,
            "layout": {
                "text-field": "{name}",
                "text-font": ["Open Sans Regular"],
                "text-size": 10,
                "visibility": "visible"
            },
            "paint": {
                "text-color": "#6d6d6d",
                "text-halo-color": "#111111",
                "text-halo-width": 1
            }
        },
        {
            "id": "place-labels",
            "type": "symbol",
            "source": "openmaptiles",
            "source-layer": "place",
            "minzoom": 8,
            "maxzoom": 18,
            "layout": {
                "text-field": "{name}",
                "text-font": ["Open Sans Regular"],
                "text-size": 12,
                "visibility": "visible"
            },
            "paint": {
                "text-color": "#cfd8d3",
                "text-halo-color": "#111111",
                "text-halo-width": 1
            }
        }
    ]
}
